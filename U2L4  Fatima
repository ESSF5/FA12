# Single factorial calculation
n = int(input("Enter a value for n: "))
factorial = 1

for i in range(1, n + 1):
    factorial *= 1

print(f"{n}! = {factorial}")
# All factorials from 1 to n
n = int(input("Enter a value for n: "))

for i in range(1, n + 1):
    factorial = 1
    for j in range(1, i + 1):
        factorial *= j
    print(f"{i}! = {factorial}")
# Factorials from 0! to n!
n = int(input("Enter a value for the upper limit, n: "))

for i in range(n + 1):
    factorial = 1
